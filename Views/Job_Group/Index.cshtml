@using Syncfusion.EJ2
@using Newtonsoft.Json
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model Job_Groups

@inject PAYROL_SYSTEM.Interfaces.IUnitOfWork _unitOfwork



@using PAYROL_SYSTEM.Session;
<link href="~/Syncfussion/styles/material.css" rel="stylesheet" />
<script src="~/Syncfussion/scripts/ej2.min.js"></script>
@{
    List<Job_Groups> job_Groups = await _unitOfwork.jobGroupRepo.GetAll();

    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h1 style="font-weight:bold;font-family:Calibri;color:#072652">Job Groups</h1>

        </div>

    </div>


    <div class="row">
        <div class="col-sm-4" style="background-color:white">
            <img src="~/Icons/undraw_Online_payments_re_y8f2.png" style="max-height:200px" class="img-fluid" />
            <div style="padding:8px;margin:2px;background-color:white;overflow:auto;margin-bottom:24px;margin-top:16px; ">
                <div style="font-size:large">
                    Add New Job Group
                </div>
                <div style="font-size:small;color:gray">
                    add new job gropu into the system
                </div>
                <p>

                </p>
                <form asp-action="CreateJobGroup" method="post">

                    <div class="form-group">
                        <input asp-for="strGroupName" type="text" required placeholder="Job Group" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input asp-for="strBasicSalary" type="number" required placeholder="Basic Salary" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input asp-for="strNHIFDeduction" type="number" required placeholder="NHIF " class="form-control" />
                    </div>
                    <div class="form-group">
                        <input asp-for="strNSSFDeduction" type="number" required placeholder="NSSF" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input asp-for="strHouseLevy" type="number" required placeholder="Housing Levy" class="form-control" />
                    </div>




                    <div class="form-group" style="text-align:center;margin-top:24px">
                        <input type="submit" value="Add  Job Group" style="background-color:#072652;color:white" class="btn  btn-sm" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-sm-8">
            <div style="text-align:start;margin-top:8px">
                <div style="font-size:large">
                    All Job Groups
                </div>
                <div style="font-size:small;color:gray">
                    List of all Job Groups in ECAN CRF
                </div>
            </div>

            @if (TempData["successs"] != null)
            {
                <div class="alert alert-success">
                    <strong>Success!!..</strong>@TempData["successs"]
                </div>
            }
            @if (TempData["Err"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Whoops!!..</strong>@TempData["Err"]
                </div>
            }
            <partial name="_Search" />
            <table class="table table-responsive-sm  table-striped table-bordered  table-sm" style="color:black">
                <thead style="background-color:#072652;color:white">
                    <tr>

                        <th>
                            Job Group
                        </th>
                        <th>
                            Basic Salary
                        </th>
                        <th>NHIF</th>
                        <th>NSSF</th>
                        <th>Housing Levy</th>

                        <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody id="myUL">
                    @if (job_Groups.Count != 0)
                    {

                        @foreach (var item in job_Groups)
                        {

                    <tr style="font-family:Calibri">

                        <td style="font-size:large"><b>@item.strGroupName</b></td>
                       
                        <td>
                           @item.strBasicSalary
                        </td>
                        <td>@item.strNHIFDeduction</td>
                        <td>@item.strNSSFDeduction</td>
                        <td>@item.strHouseLevy</td>
                        <td>
                            <a data-toggle="modal" data-target="#Edit_@item.strId">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                                Edit
                            </a>
                        </td>
                        <td>
                            <a asp-action="" data-toggle="modal" data-target="#Delete_@item.strId" style="color:red" asp-route-id=""><i class="fa fa-trash" aria-hidden="true"></i> <span>Remove</span> </a>
                        </td>

                    </tr>
                            <!-- Modal delete -->
                            <div id="Edit_@item.strId" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <div style="font-size:large;font-weight:bold" class="modal-title text-success">
                                                <i class="fa fa-pencil" aria-hidden="true"></i> Edit Job Group Info
                                            </div>
                                        </div>
                                        <form asp-action="UpdateJobGroup" method="post">
                                            <input asp-for="strId" type="hidden"  value="@item.strId"  />
                                            <div class="modal-body">

                                               
                                                <div class="form-group">
                                                    <input asp-for="strGroupName" type="text" value="@item.strGroupName" required placeholder="Job Group" class="form-control" />
                                                </div>
                                                <div class="form-group">
                                                    <input asp-for="strBasicSalary" type="number"value="@item.strBasicSalary" required placeholder="Basic Salary" class="form-control" />
                                                </div>
                                                <div class="form-group">
                                                    <input asp-for="strNHIFDeduction" type="number"value="@item.strNHIFDeduction" required placeholder="NHIF " class="form-control" />
                                                </div>
                                                <div class="form-group">
                                                    <input asp-for="strNSSFDeduction" type="number"value="@item.strNSSFDeduction" required placeholder="NSSF" class="form-control" />
                                                </div>
                                                <div class="form-group">
                                                    <input asp-for="strHouseLevy" type="number"value="@item.strHouseLevy" required placeholder="Housing Levy" class="form-control" />
                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <div class=" btn-danger btn-sm" data-dismiss="modal">Cancel</div>
                                                <input type="submit" id="completebutton" value="SAVE CHANGES" class=" btn-success btn-sm" />

                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div> <!-- Modal delete -->
                            <div id="Delete_@item.strId" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <div style="font-size:large;font-weight:bold" class="modal-title text-danger">
                                                <i class="fa fa-trash" aria-hidden="true"></i> Remove Job Group
                                            </div>
                                        </div>
                                        <div class="modal-body">
                                            <div style="font-size:large;font-weight:bold;text-align:center" class="modal-title">Remove @item.strGroupName </div>

                                            <div class="alert alert-danger">Hey you are about to remove this Job Group from the system.Are you sure you want to continue??</div>
                                        </div>
                                        <form asp-action="RemoveJobGroup">
                                            <input type="hidden" name="id" value="@item.strId" />
                                            <div class="modal-footer">
                                                <div class=" btn-success btn-sm" data-dismiss="modal">Cancel</div>
                                                <input type="submit" id="completebutton" value="REMOVE JOB GROUP" class=" btn-danger btn-sm" />

                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                    else
                    {
                        <tr>
                            <td style="text-align:center;color:red" colspan="10">No Job Groups  were Found...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

