@using Syncfusion.EJ2
@using Newtonsoft.Json
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model  IEnumerable<Departments>


@using PAYROL_SYSTEM.Session;
<link href="~/Syncfussion/styles/material.css" rel="stylesheet" />
<script src="~/Syncfussion/scripts/ej2.min.js"></script>
@{
    

    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h1 style="font-weight:bold;font-family:Calibri;color:#072652">Departments</h1>

        </div>

    </div>


    <div class="row">
        <div class="col-sm-4" style="background-color:white">
            <img src="~/Icons/undraw_Online_payments_re_y8f2.png" style="max-height:200px" class="img-fluid" />
            <div style="padding:8px;margin:2px;background-color:white;overflow:auto;margin-bottom:24px;margin-top:16px; ">
                <div style="font-size:large">
                   Add New Department
                </div>
                <div style="font-size:small;color:gray">
                    add new department into the system
                </div>
                <p>

                </p>
                <form asp-action="CreateDepartment" method="post">
                   
                    <div class="form-group">
                        <input name="strdepa_name" type="text" required placeholder="Department" class="form-control" />
                    </div>
                    <div class="form-group" style="text-align:center;margin-top:24px">
                        <input type="submit" value="Add  Department" style="background-color:#072652;color:white" class="btn  btn-sm" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-sm-8">
            <div style="text-align:start;margin-top:8px">
                <div style="font-size:large">
                    All Departments
                </div>
                <div style="font-size:small;color:gray">
                    List of all departments in ECAN CRF
                </div>
            </div>

            @if (TempData["successs"] != null)
            {
                <div class="alert alert-success">
                    <strong>Success!!..</strong>@TempData["successs"]
                </div>
            }
            @if (TempData["Err"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Whoops!!..</strong>@TempData["Err"]
                </div>
            }
            <partial name="_Search" />
            <table class="table table-responsive-sm  table-striped table-bordered  table-sm" style="color:black">
                <thead style="background-color:#072652;color:white">
                    <tr>
                       
                        <th>
                            Department
                        </th>

                        <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody id="myUL">
                    @if (Model.Count() != 0)
                    {
                      
                        @foreach (var item in Model)
                        {                        

                            <tr style="font-family:Calibri">
                              
                                <td><b>@item.strDepartmentId</b></td>

                                <td>
                                    <a data-toggle="modal" data-target="#Edit_@item.strId">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                        Edit
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="" data-toggle="modal" data-target="#Delete_@item.strId" style="color:red" asp-route-id=""><i class="fa fa-trash" aria-hidden="true"></i> <span>Remove</span> </a>
                                </td>
                          
                            </tr>
                        }
                       
                    }
                    else
                    {
                        <tr>
                            <td style="text-align:center;color:red" colspan="10">No departments  were Found...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

